<Window x:Class="TaskManeger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManeger"
        mc:Ignorable="d"
        Title="MainWindow"
        MinHeight="300"
        SizeToContent="WidthAndHeight"
        >
    <!--<Window.DataContext>
        <local:Class1/>
    </Window.DataContext>-->

    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Bottom" Text="{Binding ElementName=dd, Path=Items.Count}"/>
        <UniformGrid Columns="2">

            <DockPanel>
                <TextBlock DockPanel.Dock="Bottom"/>
                <DataGrid x:Name="dd"/>
            </DockPanel>

            <DockPanel>

        <TextBlock DockPanel.Dock="Bottom" Text="{Binding ElementName=tt, Path=Items.Count}"/>
                <ListBox x:Name="tt"/>
            </DockPanel>

        </UniformGrid>
    </DockPanel>
</Window>
